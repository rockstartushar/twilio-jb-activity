{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "https://assets.twilio.com/public_assets/marketing/twilio-icon.png",
    "category": "message"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "Twilio SMS",
      "description": "Send SMS via Twilio Messaging Service"
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        { "to": "{{Contact.Default.MobileNumber}}" },
        { "body": "Hello from Journey Builder!" },
        { "jobId": "{{Context.Journey.ID}}" },
        { "subscriberKey": "{{Contact.Key}}" }
      ],
      "outArguments": [],
      "url": "https://twilio-jb-activity.onrender.com/execute",
      "verb": "POST",
      "timeout": 10000,
      "retryCount": 2,
      "retryDelay": 1000
    }
  },
  "configurationArguments": {
    "save": { "url": "https://twilio-jb-activity.onrender.com/save", "verb": "POST" },
    "publish": { "url": "https://twilio-jb-activity.onrender.com/publish", "verb": "POST" },
    "validate": { "url": "https://twilio-jb-activity.onrender.com/validate", "verb": "POST" },
    "stop": { "url": "https://twilio-jb-activity.onrender.com/stop", "verb": "POST" }
  },
  "userInterfaces": {
    "configModal": {
      "height": 500,
      "width": 480,
      "url": "https://twilio-jb-activity.onrender.com/ui"
    }
  },
  "wizardSteps": [
    { "label": "Message" },
    { "label": "Review" }
  ],
  "outcomes": [
    { "arguments": { "branchResult": "ok" }, "metaData": { "label": "Sent" } },
    { "arguments": { "branchResult": "error" }, "metaData": { "label": "Failed" } }
  ]
}
