{
  "workflowApiVersion": "1.1",
  "type": "REST",
  "metaData": {
    "icon": "https://assets.twilio.com/public_assets/marketing/twilio-icon.png",
    "category": "message"
  },
  "lang": {
    "en-US": {
      "name": "Twilio SMS/WhatsApp Activity",
      "description": "Send personalized SMS or WhatsApp messages via Twilio Messaging Service"
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        { "to": "{{Contact.Default.MobileNumber}}" },
        { "body": "Hello {{FirstName}}!" },
        { "channel": "sms" },
        { "jobId": "{{Context.Journey.ID}}" },
        { "journeyName": "{{Context.Journey.Name}}" },
        { "activityId": "{{Activity.Id}}" },
        { "subscriberKey": "{{Contact.Key}}" }
      ],
      "outArguments": [
        { "messageSid": "" },
        { "status": "" }
      ],
      "url": "{{Endpoint}}/execute",
      "verb": "POST",
      "timeout": 10000,
      "retryCount": 2,
      "retryDelay": 1000
    }
  },
  "configurationArguments": {
    "save":     { "url": "{{Endpoint}}/save", "verb": "POST" },
    "publish":  { "url": "{{Endpoint}}/publish", "verb": "POST" },
    "validate": { "url": "{{Endpoint}}/validate", "verb": "POST" },
    "stop":     { "url": "{{Endpoint}}/stop", "verb": "POST" }
  },
  "userInterfaces": {
    "configModal": {
      "height": 500,
      "width": 480,
      "url": "{{Endpoint}}/ui"
    }
  },
  "wizardSteps": [
    { "label": "Message" },
    { "label": "Review" }
  ],
  "outcomes": [
    {
      "arguments": { "branchResult": "ok" },
      "metaData": { "label": "Sent Successfully" }
    },
    {
      "arguments": { "branchResult": "error" },
      "metaData": { "label": "Delivery Failed" }
    }
  ]
}
