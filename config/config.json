{
  "workflowApiVersion": "1.1",
  "type": "REST",
  "metaData": {
    "icon": "https://logo.svgcdn.com/l/twilio-icon.svg",
    "category": "message"
  },
  "lang": {
    "en-US": {
      "name": "Twilio SMS/WhatsApp Activity",
      "description": "Send personalized SMS or WhatsApp messages via Twilio Messaging Service"
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        { "to": "{{Contact.Default.MobileNumber}}" }
      ],
      "outArguments": [],
      "url": "https://twilio-jb-activity-production-5924.up.railway.app/journeybuilder/execute",
      "verb": "POST",
      "body": "",
      "format": "json",
      "timeout": 2000,
      "useJwt": false
    }
  },
  "configurationArguments": {
    "save":     { "url": "https://twilio-jb-activity-production-5924.up.railway.app/save",     "verb": "POST" },
    "publish":  { "url": "https://twilio-jb-activity-production-5924.up.railway.app/publish",  "verb": "POST" },
    "validate": { "url": "https://twilio-jb-activity-production-5924.up.railway.app/validate", "verb": "POST" },
    "stop":     { "url": "https://twilio-jb-activity-production-5924.up.railway.app/stop",     "verb": "POST" }
  },
  "userInterfaces": {
    "configModal": {
      "height": 600,
      "width": 800,
      "url": "https://twilio-jb-activity-production-5924.up.railway.app/ui"
    }
  },
  "wizardSteps": [
    { "label": "Message" },
    { "label": "Review" }
  ],
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          { "to": { "dataType": "Text", "isNullable": false, "direction": "in", "access": "visible" } },
          { "body": { "dataType": "Text", "isNullable": false, "direction": "in", "access": "visible" } },
          { "channel": { "dataType": "Text", "isNullable": false, "direction": "in", "access": "visible" } },
          { "jobId": { "dataType": "Text", "isNullable": false, "direction": "in", "access": "visible" } },
          { "journeyName": { "dataType": "Text", "isNullable": false, "direction": "in", "access": "visible" } },
          { "activityId": { "dataType": "Text", "isNullable": false, "direction": "in", "access": "visible" } },
          { "subscriberKey": { "dataType": "Text", "isNullable": false, "direction": "in", "access": "visible" } }
        ],
        "outArguments": [
          { "messageSid": { "dataType": "Text", "isNullable": false, "direction": "out", "access": "visible" } },
          { "status":     { "dataType": "Text", "isNullable": false, "direction": "out", "access": "visible" } }
        ]
      }
    }
  }
}
